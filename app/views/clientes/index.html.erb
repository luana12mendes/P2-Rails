<p id="notice"><%= notice %></p>

<h1>Clientes</h1>
<hr/>
<%= render 'formbusca' %>
<hr/>

<table>
  <thead>
    <tr>
      <th>Matricula</th>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Cpf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.matricula %></td>
        <td><%= cliente.nome %></td>
        <td><%= cliente.endereco %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.cpf %></td>
        <td><%= link_to ' ', cliente , class: "glyphicon glyphicon-blackboard" %></td>
        <td><%= link_to ' ', edit_cliente_path(cliente), class: "glyphicon glyphicon-pencil"%></td> 
        <td><%= link_to ' ', cliente, method: :delete, data: { confirm: 'Deseja Realmente Excluir?' }, class:"glyphicon glyphicon-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

