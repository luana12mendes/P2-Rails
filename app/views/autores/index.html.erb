<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Editora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @autores.each do |autor| %>
      <tr>
        <td><%= autor.nome %></td>
        <td><%= autor.email %></td>
        <td><%= autor.editora %></td>
        <td><%= link_to ' ', autor , class: "glyphicon glyphicon-blackboard"%></td>
        <td><%= link_to ' ', edit_autor_path(autor), class: "glyphicon glyphicon-pencil" %></td>
        <td><%= link_to ' ', autor, method: :delete, data: { confirm: 'Deseja Realmente Excluir?' }, class:"glyphicon glyphicon-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

